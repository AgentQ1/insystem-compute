{
  "name": "insystem-compute-desktop",
  "version": "1.0.0",
  "description": "InSystem Compute - Desktop app for running AI models locally",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.insystem.compute",
    "productName": "InSystem Compute",
    "files": [
      "main.js",
      "renderer.js",
      "index.html",
      "styles.css",
      "preload.js"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns",
      "target": ["dmg"],
      "fileAssociations": [
        {
          "ext": "gguf",
          "name": "GGUF Model File",
          "role": "Editor",
          "icon": "assets/file-icon.icns"
        }
      ]
    },
    "win": {
      "target": ["nsis"],
      "icon": "assets/icon.ico",
      "fileAssociations": [
        {
          "ext": "gguf",
          "name": "GGUF Model File",
          "icon": "assets/file-icon.ico"
        }
      ]
    },
    "linux": {
      "target": ["AppImage"],
      "category": "Development",
      "fileAssociations": [
        {
          "ext": "gguf",
          "mimeType": "application/x-gguf"
        }
      ]
    }
  },
  "keywords": [
    "ai",
    "llm",
    "edge",
    "gguf",
    "local-inference"
  ],
  "author": "InSystem",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}
